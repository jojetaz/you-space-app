# Variables de entorno para la aplicación
# Copia este archivo como .env y configura los valores

# Configuración de Flask
FLASK_ENV=production
SECRET_KEY=tu_clave_secreta_muy_segura_aqui

# Base de datos
DATABASE_URL=sqlite:///ia_tools.db

# Configuración de Python
PYTHON_VERSION=3.9.18

# Configuración de Gunicorn (opcional)
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=120

# Configuración de la aplicación Flask
FLASK_APP=app.py

# Configuración del dominio
DOMAIN=you-space.info
SERVER_NAME=you-space.info

# Configuración de Cloudflare
CLOUDFLARE_ENABLED=true
CLOUDFLARE_IP_RANGES=true

# Configuración de seguridad
PREFERRED_URL_SCHEME=https
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Configuración de logs
LOG_LEVEL=INFO
LOG_FILE=/var/log/you-space/app.log 